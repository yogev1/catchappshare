  <div class="row font">
    <div class="col-md-12 col-xs-12 col-sm-12">
      <h3 class="text-center"></h3>
    </div>  
  </div>
  <div class="font pic" style="background-image: url('<%= @event["event"]["activity"]["landscape_image_url"] %>')">   
  </div>  
</div>  
<div class="row font">
  <div class="col-md-3 col-xs-3 col-sm-3">         
  </div>       
  <div class="col-md-1 col-xs-1 col-sm-1 text-center">  
    <h2><%= @start_month %></h2>
    <h2><%= @num_start %></h2>
  </div>
  <div class="col-md-1 col-xs-1 col-sm-1">         
  </div>      
  <div class="col-md-2 col-xs-2 col-sm-2">
    <div class="row">  
      <h2>Starts: </h2>
      <h2><%= @hour_start %>:<%= @min_start %></h2>
      <% if @hour_start >= 12 %>
      <h2>PM</h2>
      <% else %>
      <h2>AM</h2>
      <% end %>  
    </div> 
    <div class="row"> 
      <h2>Ends: </h2>
      <h2><%= @hour_end %>:<%= @min_end %></h2>
      <% if @hour_end >= 12 %>
      <h2>PM</h2>
      <% else %>
      <h2>AM</h2>
      <% end %>           
    </div>          
  </div>             

  <div class="col-md-4 col-xs-4 col-sm-4">
    <div class="row">
      <h2><%= @start_day %>, <%= @start_month %> <%= @num_start %>, <%= @year_start %></h2> 
    </div> 
    <div class="row">
      <h2><%= @end_day %>, <%= @end_month %> <%= @num_end %>, <%= @year_end %></h2>
    </div>                
  </div>       
</div><hr> 
<div class="row font">
  <div class="col-md-12 col-xs-12 col-sm-12 text-center">
    <h2 class="text-center">Awaiting More Participants</h2>
