        <h2><%= @start_day %>, <%= @start_month %> <%= @num_start %>, <%= @year_start %></h2> 
      </div> 
      <div class="row">
        <h2><%= @end_day %>, <%= @end_month %> <%= @num_end %>, <%= @year_end %></h2>
