      <div class="row">  
        <h2>Starts: </h2>
        <h2><%= @hour_start %>:<%= @min_start %></h2>
        <% if @hour_start >= 12 %>
        <h2>PM</h2>
        <% else %>
        <h2>AM</h2>
        <% end %>  
      </div><br>
      <div class="row"> 
        <h2>Ends: </h2>
        <h2><%= @hour_end %>:<%= @min_end %></h2>
