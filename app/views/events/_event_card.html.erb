<div class="row font">
  <div class="col-md-2 col-sm-2 col-xs-12 grey">
  </div>     
  <div class="col-md-5 col-xs-12 col-sm-5 text-center">
    <div class="col-md-2 col-xs-2 col-sm-2">    
      <h2 class="font-lg"><%= @start_month_big %></h2>
      <h2 style="font-size: 350%" class="font-sm"><%= @num_start %></h2>
    </div> 
    <div class="col-md-1 col-xs-1 col-sm-1">         
    </div> 
    <div class="col-md-4 col-xs-4 col-sm-4" style="padding-left:8%">
      <div class="row">  
        <h2 class="font-sm">Starts: </h2>
        <h2 class="font-sm">&nbsp&nbsp<%= @hour_start %>:<%= @min_start %></h2>
        <% if @hour_start >= 12 %>
          <h2 class="font-sm">PM</h2>
        <% else %>
          <h2 class="font-sm">AM</h2>
        <% end %>  
      </div><br>
      <div class="row"> 
        <h2 class="font-sm">Ends: </h2>
        <h2 class="font-sm">&nbsp&nbsp<%= @hour_end %>:<%= @min_end %></h2>
        <% if @hour_end >= 12 %>
          <h2 class="font-sm">PM</h2>
        <% else %>
          <h2 class="font-sm">AM</h2>
        <% end %>           
      </div>             
    </div>
    <div class="col-md-1 col-xs-1 col-sm-1">         
    </div>       
    <div class="col-md-4 col-xs-4 col-sm-4" style="padding-left:8%">
      <div class="row">
        <h2 class="font-sm"><%= @start_day %>, <%= @start_month %> <%= @num_start %>, <%= @year_start %></h2> 
      </div> 
      <div class="row">
        <h2 class="font-sm"><%= @end_day %>, <%= @end_month %> <%= @num_end %>, <%= @year_end %></h2>
      </div>                
    </div>          
  </div>             
  <div class="col-md-5 col-sm-5 col-xs-5 grey">
  </div>       
</div>
<div class="row font">
  <div class="col-md-2 col-sm-2 col-xs-2 grey">
  </div>  
  <div class="col-md-5 col-xs-5 col-sm-5 text-center border">
    <h2 class="text-center bold font-lg">Awaiting More Participants</h2><br>
    <div class="row font">
      <div class="col-md-3 col-xs-3 col-sm-3">
        <h2 class="text-center"><%= image_tag "mixedColor.png" %></h2>
      </div> 
      <div class="col-md-2 col-xs-2 col-sm-2">
        <h2 class="text-center font-sm"><%= @event["event"]["participants"].count %></h2>
      </div> 
      <div class="col-md-1 col-xs-1 col-sm-1">
        <h2 class="text-center font-lg"> | </h2>
      </div>
      <div class="col-md-6 col-xs-6 col-sm-6">
        <% more = @event["event"]["participants_required"].to_i - @event["event"]["participants"].count %>
        <% expire = ((Time.zone.now - @end_time) / 1.day).to_i.abs + 1 %>
        <h2 class="text-center font-sm"><%= @event["event"]["participants_required"].to_i %> Participants Required.<br>  <%= more %> More needed within <%= expire %> days</h2>
      </div>                        
    </div>       
  </div>
  <div class="col-md-5 col-xs-5 col-sm-5 grey">
  </div>
</div>     
<div class="row">
  <div class="col-md-2 col-xs-2 col-sm-2 grey">
